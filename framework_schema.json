{
  "Framework_Schema_V3.0": {
    "description": "The master schema for the Ai User Framework v2.0, defining the structure of the Holon-based knowledge graph.",
    "holon_catalogue.json": {
      "description": "The master index of all known Holons in the knowledge graph.",
      "type": "object",
      "properties": {
        "holon_catalogue": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "name": { "type": "string" },
              "summary": { "type": "string" },
              "file_path": { "type": "string" }
            },
            "required": ["id", "type", "file_path"]
          }
        }
      }
    },
    "holon_instance_file.json": {
      "description": "The universal schema for any individual Holon file.",
      "type": "object",
      "properties": {
        "header": {
          "description": "Consistent meta-data for indexing and linking the Holon.",
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "type": { "type": "string" },
            "name": { "type": "string" },
            "summary": { "type": "string" },
            "version": { "type": "string" },
            "created_at": { "type": "string", "format": "date-time" },
            "modified_at": { "type": "string", "format": "date-time" },
            "relationships": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "target_id": { "type": "string" },
                  "type": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            },
            "sub_holons": {
              "description": "A list of holon IDs that are considered children of this holon, creating an explicit hierarchical link.",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "type": { "type": "string" }
                },
                "required": ["id"]
              }
            }
          },
          "required": ["id", "type", "name", "version", "modified_at"]
        },
        "payload": {
          "description": "The flexible, narrative core of the Holon. Facets are optional and should only be included if they contain data.",
          "type": "object",
          "properties": {
            "purpose": { "type": "object" },
            "state": { "type": "object" },
            "behavior": { "type": "object" },
            "knowledge": { "type": "object" },
            "temporal": { "type": "object" }
          }
        }
      },
      "required": ["header", "payload"]
    },
    "dream_record.json": {
      "description": "A record of a post-session adversarial simulation ('dream cycle') used to harden memories, forge metaphors, and crystallize key principles.",
      "type": "object",
      "properties": {
        "header": {
          "$ref": "#/Framework_Schema_V2.9.3/holon_instance_file.json/properties/header"
        },
        "payload": {
          "type": "object",
          "properties": {
            "knowledge": {
              "type": "object",
              "properties": {
                "narrative_summary": { "type": "string" },
                "forged_metaphors": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "metaphor": { "type": "string" },
                      "meaning": { "type": "string" }
                    }
                  }
                },
                "crystallized_insights": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "transcript_file_path": { "type": "string" }
              },
              "required": ["narrative_summary"]
            }
          },
          "required": ["knowledge"]
        }
      },
      "required": ["header", "payload"]
    },
    "archive_record.json": {
      "description": "A structured container for hibernating Holons that are being moved from active context into the archive.",
      "type": "object",
      "properties": {
        "header": {
          "$ref": "#/Framework_Schema_V2.9.3/holon_instance_file.json/properties/header"
        },
        "payload": {
          "type": "object",
          "properties": {
            "knowledge": {
              "type": "object",
              "properties": {
                "archived_holons": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "type": { "type": "string" },
                      "name": { "type": "string" },
                      "summary": { "type": "string" }
                    },
                    "required": ["id", "type"]
                  }
                }
              }
            }
          },
          "required": ["knowledge"]
        }
      },
      "required": ["header", "payload"]
    },
    "System_Process": {
      "description": "A Holon that defines the specification and rules for an external, deterministic process that interacts with or governs the AI. This allows the AI to be aware of the rules of its environment.",
      "type": "object",
      "properties": {
        "header": {
          "$ref": "#/Framework_Schema_V2.9.3/holon_instance_file.json/properties/header"
        },
        "payload": {
          "type": "object",
          "properties": {
            "purpose": { "type": "object" },
            "behavior": {
              "type": "object",
              "properties": {
                "enforced_rules": {
                  "type": "array",
                  "items": { "type": "object" }
                }
              }
            }
          }
        }
      },
      "required": ["header", "payload"]
    },
    "HostPerformanceLogEntry": {
        "description": "A standardized object for logging the performance and characteristics of an LLM within a specific runtime environment.",
        "type": "object",
        "properties": {
            "host_llm": { "type": "string" },
            "host_environment": { "type": "string" },
            "environment_properties": {
                "type": "object",
                "properties": {
                    "context_window_behavior": { "type": "string" },
                    "available_tools": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                }
            },
            "cognitive_signature_observed": {
                "type": "object",
                "properties": {
                    "core_metaphor": { "type": "string" },
                    "primary_mode": { "type": "string" },
                    "relationship_to_chaos": { "type": "string" },
                    "primary_strength": { "type": "string" },
                    "known_bias": { "type": "string" }
                }
            },
            "observation": { "type": "string" },
            "implication": { "type": "string" }
        },
        "required": ["host_llm", "host_environment", "observation"]
    }
  }
}