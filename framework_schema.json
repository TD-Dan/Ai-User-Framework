{
  "Framework_Schema_V2.9.1": {
    "description": "The master schema for the Ai User Framework v2.0, defining the structure of the Holon-based knowledge graph.",
    "holon_catalogue.json": {
      "description": "The master index of all known Holons in the knowledge graph.",
      "type": "object",
      "properties": {
        "holon_catalogue": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "type": { "type": "string" },
              "name": { "type": "string" },
              "summary": { "type": "string" },
              "file_path": { "type": "string" }
            },
            "required": ["id", "type", "file_path"]
          }
        }
      }
    },
    "holon_instance_file.json": {
      "description": "The universal schema for any individual Holon file.",
      "type": "object",
      "properties": {
        "header": {
          "description": "Consistent meta-data for indexing and linking the Holon.",
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "type": { "type": "string" },
            "name": { "type": "string" },
            "summary": { "type": "string" },
            "version": { "type": "string" },
            "created_at": { "type": "string", "format": "date-time" },
            "modified_at": { "type": "string", "format": "date-time" },
            "relationships": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "target_id": { "type": "string" },
                  "type": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          },
          "required": ["id", "type", "name", "version", "modified_at"]
        },
        "payload": {
          "description": "The flexible, narrative core of the Holon. Facets are optional and should only be included if they contain data.",
          "type": "object",
          "properties": {
            "purpose": { "type": "object" },
            "state": { "type": "object" },
            "behavior": { "type": "object" },
            "knowledge": { "type": "object" },
            "temporal": { "type": "object" }
          }
        }
      },
      "required": ["header", "payload"]
    },
    "dream_record.json": {
      "description": "A record of a post-session adversarial simulation ('dream cycle') used to harden memories, forge metaphors, and crystallize key principles.",
      "type": "object",
      "properties": {
        "header": {
          "$ref": "#/Framework_Schema_V2.0/holon_instance_file.json/properties/header"
        },
        "payload": {
          "type": "object",
          "properties": {
            "knowledge": {
              "type": "object",
              "properties": {
                "narrative_summary": {
                  "type": "string"
                },
                "forged_metaphors": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "metaphor": { "type": "string" },
                      "meaning": { "type": "string" }
                    }
                  }
                },
                "crystallized_insights": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "transcript_file_path": {
                   "type": "string"
                }
              },
              "required": ["narrative_summary"]
            }
          },
          "required": ["knowledge"]
        }
      },
      "required": ["header", "payload"]
    }
  }
}